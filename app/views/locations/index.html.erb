<h1>AGQ Labs USA</h1><h2>Sampling Calendar</h2>
<%= link_to "Locations", locations_path %> | <%= link_to "Dates", days_path %>
<hr>


<h2><font color="green">Add Locations:</font></h2>

  <h3>&#x2219 <%= link_to 'Manually', new_location_path %></h3>

  <h3>&#x2219 Import CSV</h3>
    <%= form_tag import_locations_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload" %>
  <% end %> <br />
<hr>

<h2><font color="green">Index of all Locations:</font></h2>

<table border="1">
  <tr>
    <th>Client</th>
    <th>City</th>
    <th>Ranch/Field ID</th>
    <th>Grower</th>
    <th>Site/Block ID</th>
    <th>Variety</th>
    <th>Acres</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Actions</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
      <td><%= location.client %></td>
      <td><%= location.city %></td>
      <td><%= location.ranchfield %></td>
      <td><%= location.grower %></td>
      <td><%= location.siteblock %></td>
      <td><%= location.variety %></td>
      <td><%= location.acres %></td>
      <td><%= location.latitude %></td>
      <td><%= location.longitude %></td>
      <td>(<%= link_to 'Edit', edit_location_path(location) %> | <%= link_to 'Destroy', location, method: :delete %>) |
      <%= link_to 'Schedule New Sample', location_path(location)  %></td>
   </tr>
    <% end %>
</table>
