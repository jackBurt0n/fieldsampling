<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Sample time</th>
      <th>City</th>
      <th>Ranch</th>
      <th>Field</th>
      <th>Site</th>
      <th>Grower</th>
      <th>Block</th>
      <th>Variety</th>
      <th>Acres</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.id %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.sample_time %></td>
        <td><%= location.city %></td>
        <td><%= location.ranch %></td>
        <td><%= location.field %></td>
        <td><%= location.site %></td>
        <td><%= location.grower %></td>
        <td><%= location.block_id %></td>
        <td><%= location.variety %></td>
        <td><%= location.acres %></td>
        <td><%= location.client %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

